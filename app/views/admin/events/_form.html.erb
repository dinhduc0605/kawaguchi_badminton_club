<%= link_to 'Trở về', :back %>
<%= form_with model: [:admin, @event] do |form| %>
  <div class='mb-3'>
    <%= form.label :title, 'Tiêu đề', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class='mb-3'>
    <%= form.label :place, 'Địa chỉ', class: 'form-label' %>
    <%= form.text_field :place, class: 'form-control', required: true %>
  </div>
  <div>
    <%= form.text_area :note, placeholder: 'Ghi chú' %>
  </div>
  <div>
    <p>Thời gian</p>
    <%= form.date_field :open_date, required: true %> | <%= form.time_field :start_time, required: true %> ~ <%= form.time_field :end_time, required: true %>
  </div>
  <br>
  <div>
    <%= form.submit 'OK' %>
  </div>
<% end %>
